{
  "name": "dswtp-backend",
  "version": "1.0.0",
  "description": "trabajopractico-desarrollodesoftware-comision303",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "start:dev": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/app.js\"",
    "test": "jest --verbose --silent --detectOpenHandles",
    "test:watch": "pnpm run test -- --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/cors": "2.8.19",
    "@types/jsonwebtoken": "9.0.10",
    "@types/multer": "2.0.0",
    "prettier": "3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsc-watch": "6.0.4",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "@mikro-orm/core": "6.4.16",
    "@mikro-orm/mongo-highlighter": "1.0.0",
    "@mikro-orm/mongodb": "6.4.16",
    "@types/express": "5.0.3",
    "@types/node": "24.0.3",
    "bcryptjs": "3.0.2",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "jsonwebtoken": "9.0.2",
    "mongodb": "6.18.0",
    "multer": "2.0.2",
    "reflect-metadata": "0.2.2"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json",
    "env": {
      "jest": true
    }
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": {
            "module": "es2022",
            "target": "es2020"
          }
        }
      ]
    }
  }
}